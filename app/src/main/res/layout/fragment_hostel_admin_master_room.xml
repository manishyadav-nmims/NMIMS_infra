<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/colorWhite"
    tools:context=".Fragments.Hostel.HostelAdminMasterRoomFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager_hostel_master"
            android:layout_width="match_parent"
            android:layout_above="@+id/lineAbove_tabLayout_hostel_master"
            android:layout_height="match_parent">
        </androidx.viewpager.widget.ViewPager>

        <View
            android:id="@+id/lineAbove_tabLayout_hostel_master"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGrey"
            android:layout_above="@+id/tabLayout_hostel_master"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout_hostel_master"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            app:tabSelectedTextColor="@color/colorWhite"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabIndicatorHeight="3dp"
            app:tabMode="fixed">
        </com.google.android.material.tabs.TabLayout>

    </RelativeLayout>
</FrameLayout>