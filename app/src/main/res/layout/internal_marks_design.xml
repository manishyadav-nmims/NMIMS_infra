<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="6dp"    android:padding="5dp"    android:background="@drawable/reactangular_box">    <TextView        android:id="@+id/subjectTitle"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:textSize="16dp"        android:textAlignment="center"        android:layout_marginTop="10dp"        android:textColor="@color/colorPrimaryDark"/>    <RelativeLayout        android:id="@+id/Im_Container"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:paddingTop="15dp"        android:layout_below="@+id/subjectTitle"        android:paddingLeft="10dp"        android:paddingRight="10dp"        android:paddingBottom="10dp"        android:layout_centerInParent="true">        <TextView            android:id="@+id/IM_marksObtained"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Marks Obtained"            android:textSize="14dp"            android:textColor="@color/colorBlack"/>        <TextView            android:id="@+id/IM_marksObtainedValue"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_toRightOf="@+id/IM_marksObtained"            android:layout_marginLeft="15dp"            android:textColor="@color/colorBlack"            android:alpha="0.7"/>        <TextView            android:id="@+id/IM_status"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="Status"            android:layout_marginTop="10dp"            android:textSize="14dp"            android:layout_below="@+id/IM_marksObtainedValue"            android:textColor="@color/colorBlack"/>        <TextView            android:id="@+id/IM_statusValue"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/IM_marksObtainedValue"            android:layout_marginTop="10dp"            android:layout_toRightOf="@+id/IM_status"            android:layout_marginLeft="75dp"            android:textColor="@color/colorBlack"            android:alpha="0.7"/>    </RelativeLayout><!--    <View        android:layout_width="match_parent"        android:layout_height="3dp"        android:layout_below="@id/Im_Container"        android:background="@color/colorLightGrey" />--></RelativeLayout>