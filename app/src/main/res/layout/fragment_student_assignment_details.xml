<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:id="@+id/studAssignDetailsFrag"    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:background="@color/colorWhite"    tools:context=".Fragments.Academic.StudentAssignmentDetailsFragment">    <androidx.cardview.widget.CardView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorDullWhite"        app:cardCornerRadius="15dip"        android:layout_margin="12dp">        <ScrollView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:scrollbars="none">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:padding="8dp">                <TextView                    android:id="@+id/courseTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Course       :"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/courseValue"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="10dp"                    android:layout_toRightOf="@+id/courseTitle"                    android:alpha="0.6"                    android:text="Course Name"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/nameTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/courseValue"                    android:layout_marginTop="15dp"                    android:text="Name         :"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/nameValue"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/courseValue"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="15dp"                    android:layout_toRightOf="@+id/nameTitle"                    android:alpha="0.6"                    android:text="Assignment Name"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/endDateTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/nameValue"                    android:layout_marginTop="15dp"                    android:text="End Date   :"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/endDateValue"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/nameValue"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="15dp"                    android:layout_toRightOf="@+id/nameTitle"                    android:alpha="0.6"                    android:text="End Date"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/statusTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/endDateValue"                    android:layout_marginTop="15dp"                    android:text="Status        :"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/statusValue"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/endDateValue"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="15dp"                    android:layout_toRightOf="@+id/nameTitle"                    android:alpha="0.6"                    android:text="Submitted"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/marksTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/statusValue"                    android:layout_marginTop="15dp"                    android:text="Marks         :"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/marksValue"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/statusValue"                    android:layout_marginLeft="10dp"                    android:layout_marginTop="15dp"                    android:layout_toRightOf="@+id/nameTitle"                    android:alpha="0.6"                    android:text="10"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/assignmentDetailsTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/marksValue"                    android:layout_marginTop="15dp"                    android:text="AssignmentDetails :"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/assignmentDetailsValue"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@+id/assignmentDetailsTitle"                    android:layout_marginTop="15dp"                    android:alpha="0.6"                    android:layout_marginRight="10dp"                    android:text="Assignment Details Content"                    android:textColor="@color/colorBlack"                    android:textSize="16dp"/>                <TextView                    android:id="@+id/assignmentQuestionFileTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/assignmentDetailsValue"                    android:layout_marginTop="15dp"                    android:text="Assignment Question File :"                    android:visibility="visible"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <LinearLayout                    android:id="@+id/assignmentQuestionFileDC"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/assignmentQuestionFileTitle"                    android:layout_marginTop="15dp"                    android:visibility="visible"                    android:layout_marginRight="10dp"                    android:background="@drawable/reactangular_box"                    android:orientation="horizontal"                    android:paddingLeft="8dp"                    android:paddingTop="2.5dp"                    android:paddingRight="8dp"                    android:paddingBottom="2.5dp">                    <Button                        android:id="@+id/assignmentQuestionFileDownloadBtn"                        style="@style/Widget.AppCompat.Button.Borderless"                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:background="@drawable/download_red" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="4dp"                        android:text="DOWNLOAD "                        android:textColor="@color/colorPrimary"                        android:textSize="16dp"                        android:textStyle="bold" />                </LinearLayout>                <TextView                    android:id="@+id/previousUploadFileTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/assignmentQuestionFileDC"                    android:layout_marginTop="15dp"                    android:visibility="visible"                    android:text="Previous Upload Answer File :"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <LinearLayout                    android:id="@+id/previousUploadFileDC"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/previousUploadFileTitle"                    android:layout_marginTop="15dp"                    android:layout_marginRight="10dp"                    android:background="@drawable/reactangular_box"                    android:orientation="horizontal"                    android:paddingLeft="8dp"                    android:visibility="visible"                    android:paddingTop="2.5dp"                    android:paddingRight="8dp"                    android:paddingBottom="2.5dp">                    <Button                        style="@style/Widget.AppCompat.Button.Borderless"                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:background="@drawable/download_red" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="4dp"                        android:text="DOWNLOAD "                        android:textColor="@color/colorPrimary"                        android:textSize="16dp"                        android:textStyle="bold" />                </LinearLayout>                <TextView                    android:id="@+id/selectAssignmentUploadFileTitle"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/previousUploadFileDC"                    android:layout_marginTop="15dp"                    android:visibility="visible"                    android:text="Select Assignment Upload File :"                    android:textColor="@color/colorBlack"                    android:textSize="16dp" />                <TextView                    android:id="@+id/uploadAnswerFilePath"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_below="@+id/selectAssignmentUploadFileTitle"                    android:layout_marginTop="15dp"                    android:textSize="14dp"                    android:text="No File Selected"                    android:visibility="visible"                    android:textColor="@color/colorGreen"                    android:textStyle="italic"                    android:layout_marginRight="10dp"/>                <LinearLayout                    android:id="@+id/uploadAnswerFileDC"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:visibility="visible"                    android:layout_below="@+id/uploadAnswerFilePath"                    android:layout_marginTop="15dp"                    android:layout_marginRight="10dp"                    android:background="@drawable/reactangular_box"                    android:orientation="horizontal"                    android:paddingLeft="8dp"                    android:paddingTop="2.5dp"                    android:paddingRight="8dp"                    android:paddingBottom="2.5dp">                    <Button                        style="@style/Widget.AppCompat.Button.Borderless"                        android:layout_width="20dp"                        android:layout_height="20dp"                        android:background="@drawable/upload_file" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginLeft="4dp"                        android:text="CHOOSE FILE "                        android:textColor="@color/colorPrimary"                        android:textSize="16dp"                        android:textStyle="bold" />                </LinearLayout>                <Button                    android:id="@+id/submitAssignmentBtn"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@+id/uploadAnswerFileDC"                    android:layout_marginTop="15dp"                    android:visibility="visible"                    android:background="@drawable/reactangular_box_solid"                    android:text="SUBMIT ASSIGNMENT"                    android:textColor="@color/colorWhite"                    android:textSize="18dp"                    android:textStyle="bold" />            </RelativeLayout>        </ScrollView>    </androidx.cardview.widget.CardView></RelativeLayout>