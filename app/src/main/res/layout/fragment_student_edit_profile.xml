<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#FFFFFF"    android:scrollbars="vertical"    tools:context=".Fragments.Academic.StudentEditProfileFragment">    <LinearLayout        android:orientation="vertical"        android:layout_width="match_parent"        android:layout_height="match_parent">    <LinearLayout        android:layout_width="match_parent"        android:orientation="vertical"        android:padding="10dp"        android:background="@drawable/assignment_box"        android:layout_margin="7dp"        android:layout_marginTop="20dp"        android:layout_height="wrap_content">        <TextView            android:text="Edit Profile"            android:textSize="20dp"            android:textColor="@color/colorPrimaryDark"            android:padding="5dp"            android:layout_gravity="center"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>        <EditText            android:id="@+id/editEmail"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:drawableRight="@drawable/ic_edit_black_24dp"            android:padding="10dp"            android:inputType="textEmailAddress"            android:maxLines="1"            android:background="@drawable/shape_email"            android:drawableLeft="@drawable/ic_username"            android:drawablePadding="10dp"            android:hint="Enter Your Email"            />        <EditText            android:id="@+id/editphone"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:padding="10dp"            android:inputType="textEmailAddress"            android:drawableRight="@drawable/ic_edit_black_24dp"            android:maxLines="1"            android:background="@drawable/shape_email"            android:drawableLeft="@drawable/ic_icon_phone_no"            android:drawablePadding="10dp"            android:hint="Phone No"            />        <EditText            android:id="@+id/enterOTP"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:padding="10dp"            android:visibility="gone"            android:inputType="textEmailAddress"            android:maxLines="1"            android:background="@drawable/shape_email"            android:drawableLeft="@drawable/ic_username"            android:drawablePadding="10dp"            android:hint="Enter OTP"            />        <Button            android:id="@+id/generateOtp"            android:layout_width="150dp"            android:layout_gravity="center"            android:textStyle="bold"            android:layout_height="wrap_content"            android:layout_below="@+id/showPassword"            android:background="@drawable/round_corner_button"            android:textColor="#FFFFFF"            android:text="Generate OTP" />        <Button            android:id="@+id/saveDetails"            android:layout_width="150dp"            android:layout_gravity="center"            android:textStyle="bold"            android:visibility="gone"            android:layout_height="wrap_content"            android:layout_below="@+id/showPassword"            android:background="@drawable/round_corner_button"            android:textColor="#FFFFFF"            android:text="Save Details" />    </LinearLayout>        <View            android:id="@+id/line"            android:layout_below="@+id/saveDetails"            android:layout_width="match_parent"            android:layout_margin="10dp"            android:layout_height="6dp"            android:background="@color/colorLightGrey"/>    <LinearLayout        android:layout_width="match_parent"        android:orientation="vertical"        android:padding="10dp"        android:background="@drawable/assignment_box"        android:layout_margin="7dp"        android:layout_marginTop="20dp"        android:layout_height="wrap_content">        <TextView            android:text="Change password"            android:textSize="20dp"            android:textColor="@color/colorPrimaryDark"            android:padding="5dp"            android:layout_gravity="center"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>        <EditText            android:id="@+id/editOldpassword"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:drawableRight="@drawable/ic_edit_black_24dp"            android:padding="10dp"            android:inputType="textPassword"            android:maxLines="1"            android:background="@drawable/shape_email"            android:drawableLeft="@drawable/ic_icon_password"            android:drawablePadding="10dp"            android:hint="Old Password"            />        <EditText            android:id="@+id/editpassword"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:padding="10dp"            android:inputType="textPassword"            android:drawableRight="@drawable/ic_edit_black_24dp"            android:maxLines="1"            android:background="@drawable/shape_email"            android:drawableLeft="@drawable/ic_icon_password"            android:drawablePadding="10dp"            android:hint="New Password"            />        <EditText            android:id="@+id/editpasswordConfirm"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:padding="10dp"            android:inputType="textPassword"            android:drawableRight="@drawable/ic_edit_black_24dp"            android:maxLines="1"            android:background="@drawable/shape_email"            android:drawableLeft="@drawable/ic_icon_password"            android:drawablePadding="10dp"            android:hint="Confirm New Password"            />        <Button            android:id="@+id/savePassword"            android:layout_width="150dp"            android:layout_gravity="center"            android:textStyle="bold"            android:textColor="#FFFFFF"            android:layout_height="wrap_content"            android:layout_below="@+id/showPassword"            android:background="@drawable/round_corner_button"            android:text="Save Password" />    </LinearLayout>    </LinearLayout></ScrollView>