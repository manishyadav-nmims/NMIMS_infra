<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:layout_width="wrap_content"    android:layout_height="210dp"    android:background="@color/colorWhite"    android:padding="20dp">    <TextView        android:id="@+id/requestT"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Request New Password ?"        android:textAlignment="center"        android:layout_marginTop="12dp"        android:textSize="20sp"        android:textColor="@color/colorPrimaryDark"/>    <EditText        android:id="@+id/enterSapID"        android:layout_below="@+id/requestT"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Enter SAP ID"        android:textColorHint="@color/colorDarkGrey"        android:background="@drawable/border_bottom"        android:textAlignment="center"        android:layout_marginTop="25dp"        android:textColor="@color/colorBlack"/>    <Button        android:layout_below="@+id/enterSapID"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Reset"        android:layout_marginTop="30dp"        android:textColor="@color/colorWhite"        android:background="@drawable/round_corner_button"        android:id="@+id/resetPassword"/></RelativeLayout>