<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="400dp"    android:layout_gravity="center"    android:layout_height="wrap_content" ><LinearLayout    android:orientation="vertical"    android:layout_width="400dp"    android:gravity="center"    android:layout_height="500dp"    android:background="@color/colorWhite">        <pl.droidsonroids.gif.GifImageView            android:layout_width="130dp"            android:layout_height="130dp"            android:contentDescription="@string/app_name"            android:src="@drawable/ic_mail_send"/>    <TextView        android:layout_width="wrap_content"        android:layout_marginTop="10dp"        android:text="OTP Verification"        android:textSize="20dp"        android:textStyle="bold"        android:textColor="@color/colorBlack"        android:layout_height="wrap_content"/>        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginStart="50dp"            android:layout_marginTop="8dp"            android:layout_marginEnd="50dp"            android:gravity="center"            android:textColor="@color/colorDarkGrey"            android:text="we will send you an one time password on Your Registered Email"            android:textSize="14sp"/>        <EditText            android:id="@+id/enterSapID"            android:layout_width="300dp"            android:layout_height="wrap_content"            android:layout_margin="20dp"            android:layout_marginLeft="15dp"            android:textColor="@color/colorBlack"            android:layout_marginRight="15dp"            android:padding="10dp"            android:background="@drawable/shape_email"            android:drawablePadding="10dp"            android:hint="Sap ID"            android:textColorHint="#EFCACA"            android:importantForAutofill="no" />        <Button            android:id="@+id/resetPassword"            android:textColor="#FFFF"            android:layout_width="150dp"            android:textStyle="bold"            android:layout_margin="10dp"            android:layout_height="wrap_content"            android:layout_below="@+id/showPassword"            android:background="@drawable/round_corner_button"            android:text="Get otp"/><!-- -&#45;&#45;--> <!--   <TextView        android:id="@+id/requestT"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Request New Password ?"        android:textAlignment="center"        android:layout_marginTop="12dp"        android:textSize="20sp"        android:textColor="@color/colorPrimaryDark"/>    <EditText        android:id="@+id/enterSapID"        android:layout_below="@+id/requestT"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:hint="Enter SAP ID"        android:textColorHint="@color/colorDarkGrey"        android:background="@drawable/border_bottom"        android:textAlignment="center"        android:layout_marginTop="25dp"        android:textColor="@color/colorBlack"/>    <Button        android:layout_below="@+id/enterSapID"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Reset"        android:layout_marginTop="30dp"        android:textColor="@color/colorWhite"        android:background="@drawable/round_corner_button"        android:id="@+id/resetPassword"/>--></LinearLayout></ScrollView>