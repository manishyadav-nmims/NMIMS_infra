<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:clickable="true"
    android:background="@color/colorWhite"
    tools:context=".Fragments.Hostel.HostelStudentMarkAttendanceFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dateStudentMarkAttendanceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkBluishGrey"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textSize="25dp"/>

        <DigitalClock
            android:id="@+id/digitalClockStudentMarkAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@color/darkBluishGrey"
            android:layout_marginTop="6dp"
            android:textAllCaps="true"
            android:text="20 DEC  2019"/>

        <Button
            android:id="@+id/studentMarkAttendanceBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:background="@color/colorPrimary"
            android:layout_marginTop="15dp"
            android:text="Mark Attendance"/>

    </LinearLayout>


    <TextView
        android:id="@+id/currentLocation"
        android:text="Current Location"
        android:layout_width="match_parent"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/distanceFromNmims"
        android:text="Distance :"
        android:layout_width="match_parent"
        android:textSize="16dp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"/>


</FrameLayout>