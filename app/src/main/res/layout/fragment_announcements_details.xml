<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:background="@color/colorWhite"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:id="@+id/announcementsFragDetails"    tools:context=".Fragments.Academic.AnnouncementsFragmentDetails">    <androidx.cardview.widget.CardView        android:layout_width="match_parent"        android:layout_height="wrap_content"        app:cardCornerRadius="15dip"        android:elevation="3dp"        android:layout_margin="20dp"        android:background="@color/colorDullWhite">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="wrap_content">            <TextView                android:id="@+id/subjectDetails"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:textColor="@color/colorBlack"                android:layout_marginTop="20dp"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:textSize="22dp"/>            <TextView                android:id="@+id/announcementsTime"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_marginRight="10dp"                android:textSize="16dp"                android:layout_marginTop="4dp"                android:layout_below="@+id/subjectDetails"                android:textColor="@color/colorBlue"/>            <View                android:id="@+id/view1"                android:layout_width="match_parent"                android:layout_height="1dp"                android:layout_below="@+id/announcementsTime"                android:layout_marginTop="2dp"                android:background="@color/colorLightGrey"/>            <TextView                android:id="@+id/descriptionsAnnouncements"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="10dp"                android:layout_below="@+id/view1"                android:textColor="@color/colorBlack"                android:alpha="0.5"                android:layout_marginTop="8dp"                android:layout_marginRight="10dp"                android:layout_marginBottom="20dp"/>            <Button                android:id="@+id/downloadAnnouncementsFileBtn"                android:layout_width="match_parent"                android:layout_height="40dp"                android:text="Download Content"                android:textColor="@color/colorWhite"                android:textAllCaps="false"                android:textSize="15dp"                android:textStyle="bold"                android:layout_marginLeft="25dp"                android:layout_marginRight="25dp"                android:visibility="gone"                android:layout_below="@+id/descriptionsAnnouncements"                android:background="@drawable/reactangular_box_solid"                android:layout_marginBottom="20dp"/>        </RelativeLayout>    </androidx.cardview.widget.CardView></RelativeLayout>