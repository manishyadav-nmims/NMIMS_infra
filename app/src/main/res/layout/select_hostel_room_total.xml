<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/colorDullWhite"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Room Limits"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

   <LinearLayout
       android:id="@+id/chooseRoomLAyout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@color/extraDullWhite"
       android:layout_below="@+id/titleTV"
       android:layout_marginTop="20dp"
       android:padding="8dp">

       <EditText
           android:id="@+id/roomStartET"
           android:layout_width="30dp"
           android:layout_height="wrap_content"
           android:hint="From"
           android:textAlignment="center"
           style="@style/linear_equal_gap_style"
           android:inputType="number"
           android:layout_gravity="center_vertical"
           android:background="@color/colorWhite"
           android:textColorHint="@color/colorDarkGrey"/>

       <EditText
           android:id="@+id/roomEndET"
           android:layout_width="30dp"
           android:layout_height="wrap_content"
           android:hint="To"
           android:textAlignment="center"
           style="@style/linear_equal_gap_style"
           android:inputType="number"
           android:layout_marginLeft="5dp"
           android:layout_gravity="center_vertical"
           android:background="@color/colorWhite"
           android:textColorHint="@color/colorDarkGrey"/>

   </LinearLayout>

    <Button
        android:id="@+id/chooseRoomBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/chooseRoomLAyout"
        android:background="@drawable/reactangular_box_solid_red"
        android:text="Choose"/>

</RelativeLayout>