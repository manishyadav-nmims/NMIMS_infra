<?xml version="1.0" encoding="utf-8"?><ScrollView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/colorWhite"    android:id="@+id/fragments_ViewInternalMarksDetailsFragment"    tools:context=".Fragments.Academic.ViewInternalMarksDetailsFragment">    <androidx.cardview.widget.CardView        android:id="@+id/detailsContainerICA"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/colorDullWhite"        app:cardCornerRadius="15dip"        android:visibility="gone"        android:layout_margin="12dp">            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:padding="8dp">                <androidx.recyclerview.widget.RecyclerView                    android:id="@+id/icaComponentsRecyclerview"                    android:layout_width="match_parent"                    android:layout_height="wrap_content">                </androidx.recyclerview.widget.RecyclerView>                <TextView                    android:id="@+id/IM_Note"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:layout_below="@+id/icaComponentsRecyclerview"                    android:layout_marginLeft="12dp"                    android:layout_marginTop="10dp"                    android:layout_marginBottom="10dp"                    android:textStyle="bold"                    android:alpha="0.7"                    android:textAlignment="center"                    android:text="NOTE : If any query arise regarding marks, raise query from portal"                    android:textColor="@color/colorPrimaryDark"                    android:textSize="14sp" />            </RelativeLayout>    </androidx.cardview.widget.CardView></ScrollView>