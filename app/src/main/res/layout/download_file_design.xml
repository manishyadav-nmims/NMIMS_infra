<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:background="@color/colorDullWhite"    android:layout_width="match_parent"    android:elevation="3dp"    android:layout_height="50dp"    app:cardCornerRadius="15dip"    android:layout_marginTop="12dp">   <RelativeLayout       android:layout_width="match_parent"       android:layout_height="match_parent"       android:background="@color/colorLightGrey">       <ImageView           android:id="@+id/fileType"           android:layout_width="30dp"           android:layout_height="30dp"           android:layout_centerVertical="true"           android:layout_marginLeft="15dp"           android:src="@drawable/folder_file"/>       <TextView           android:id="@+id/fileName"           android:layout_width="wrap_content"           android:layout_height="wrap_content"           android:layout_centerVertical="true"           android:textColor="@color/colorBlack"           android:alpha="0.6"           android:textSize="15dp"           android:layout_marginLeft="60dp"           android:text="File Name"/>   </RelativeLayout></androidx.cardview.widget.CardView>