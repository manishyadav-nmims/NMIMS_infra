<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/colorWhite"
    tools:context=".Fragments.Hostel.HostelStudentHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/layer"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/studentProfileimg_shh"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/profile_bg" />

            <TextView
                android:id="@+id/studentName_shh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/studentEmail_shh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/studentUsername_shh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="15dp">

                <ImageView
                    android:id="@+id/studentprofileIc_shh"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/user_p" />

                <TextView
                    android:id="@+id/studentprofiletv_shh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/studentprofileIc_shh"
                    android:layout_marginLeft="74dp"
                    android:text="Profile"
                    android:alpha="0.5"
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/studentLeaveic_shh"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/leave"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="65dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/studentLeavetv_shh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/studentLeaveic_shh"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="78dp"
                    android:alpha="0.5"
                    android:text="Leave"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/studentsportsic_shh"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="45dp"
                    android:layout_below="@+id/studentprofileIc_shh"
                    android:src="@drawable/sports"/>

                <TextView
                    android:id="@+id/studentsportstv_shh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/studentsportsic_shh"
                    android:layout_marginLeft="75dp"
                    android:alpha="0.5"
                    android:text="Sports"
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/studentLaundryic_shh"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/studentLeaveic_shh"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="65dp"
                    android:src="@drawable/laundry" />

                <TextView
                    android:id="@+id/studentLaundrytv_shh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/studentLaundryic_shh"
                    android:text="Laundry"
                    android:alpha="0.5"
                    android:layout_marginRight="75dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/studentsupportic"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="45dp"
                    android:layout_below="@+id/studentsportsic_shh"
                    android:src="@drawable/support"/>

                <TextView
                    android:id="@+id/studentsupporttv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/studentsupportic"
                    android:layout_marginLeft="70dp"
                    android:alpha="0.5"
                    android:text="Support"
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/studentComplaintic_shh"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/studentLaundryic_shh"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="65dp"
                    android:src="@drawable/complaint" />

                <TextView
                    android:id="@+id/studentComplainttv_shh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/studentComplaintic_shh"
                    android:text="Complaint"
                    android:alpha="0.5"
                    android:layout_marginRight="65dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#000000"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/studentAttendanceic_shh"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="45dp"
                    android:layout_below="@+id/studentsupportic"
                    android:src="@drawable/attendance"/>

                <TextView
                    android:id="@+id/studentAttendancetv_shh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/studentAttendanceic_shh"
                    android:layout_marginLeft="60dp"
                    android:alpha="0.5"
                    android:text="Attedance"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>